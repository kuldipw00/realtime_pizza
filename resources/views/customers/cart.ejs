<section class="main-cart py-16">

    <% if(session.cart){%>

    <div class="order-cart container mx-auto w-1/2">
        <div class="flex items-center border-gray-300 pb-4">
            <img class="w-10" src="/img/black-cart.png">
            <h2 class="font-bold ml-4 text-2xl">Order Summary</h2>
        </div>
        <div class="pizza-list">

            <%for (let pizza of Object.values(session.cart.items)){%>
            
            <div class="flex items-center mt-8">
                <img class="w-24" src="/img/<%=pizza.item.image%>">
                <div class="flex-1 ml-4 mb-10">
                    <h1><%=pizza.item.name %></h1>
                    <span><%=pizza.item.size%></span>
                     
                </div>
                    <span class="flex-1 mb-10"><%=pizza.qty%> units</span>
                    <span class="mb-10 font-bold text-lg"><%=pizza.item.price * pizza.qty%></span>
  
            </div>
        <% } %>

  
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="font-bold text-lg">Total Amount:</span>
                <span class="amount font-bold text-2xl ml-2"><%=session.cart.totalPrice%></span>
            </div>

            <% if (user){%>
            <div class="text-right">

                <form action="/order" method="POST" class="mt-12">
                    <input name='phone' class="border border-gray-400 mb-4 p-2 w-1/2" type="text" placeholder="Phone number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="order-now rounded-full px-6 py-2 mt-6 font-bold" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <%} else {%>
            <a href="/login" class="inline-block cursor-pointer order rounded-full py-2 mt-6 px-6 font-bold">Login to continue</a>
            <%}%>
        </div>
        

    </div>
    <%} else {%>
    <div  class="empty-cart py-16 mx-auto">
        <div class="container mx-auto text-center item-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty </h1>
            <p class="text-gray-500 text-lg mb-12">Please order something !</p>
            <img class="emp-cart w-1/5 flex item-center mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="order inline-block px-6 py-2 rounded-full btn-primary font-bold mt-12">Go Back</a>
    
        </div>
    </div>

    <%}%>
</section>