
<section class="orders light-section" >

        <% if(messages.success){ %>
        <span id="success-alert">Order Placed</span>

        <% } %>

        <% if(messages.error){ %>
            <span id="success-alert">Something went wrong</span>
    
        <% } %>

        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Time</th>
                    
                </tr>
            </thead>

            <tbody>
                <% if(orders.length) { %>
                    <% orders.forEach((order)=>{ %>
                        <tr>
                    
                            <td class="border px-4 py-2 ">
                                <a class="link" href="/customer/orders/<%=order._id %>"><%=order._id %></a></td>
                            <td class="border px-4 py-2"><%=order.phone %></td>
                            <td class="border px-4 py-2"><%=order.address %></td>
                            <td class="border px-4 py-2"><%= moment(order.createdAt).format('hh:mm:A') %></td>
                            

                        </tr>
                    <% }) %>
              
                <% } else { %>
                    <tr>
                        <td>No Orders Found</td>
                    </tr>
                <% } %>
            </tbody>

        </table>

    </div>

</section>